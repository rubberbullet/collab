<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="smarty.extension.assetic.dynamic.class">NoiseLabs\Bundle\SmartyBundle\Extension\DynamicAsseticExtension</parameter>
        <parameter key="smarty.extension.assetic.static.class">NoiseLabs\Bundle\SmartyBundle\Extension\StaticAsseticExtension</parameter>
        <parameter key="smarty.assetic.formula_loader.class">NoiseLabs\Bundle\SmartyBundle\Assetic\SmartyFormulaLoader</parameter>
    </parameters>

    <services>
        <service id="smarty.extension.assetic.dynamic" class="%smarty.extension.assetic.dynamic.class%">
            <tag name="assetic.templating.smarty" />
            <argument type="service" id="smarty.extension.routing" />
            <argument type="service" id="assetic.asset_factory" />
            <argument>%assetic.use_controller%</argument>
            <argument type="service" id="assetic.value_supplier" on-invalid="null" />
        </service>

        <service id="smarty.extension.assetic.static" class="%smarty.extension.assetic.static.class%">
            <tag name="assetic.templating.smarty" />
            <argument type="service" id="smarty.extension.assets" />
            <argument type="service" id="assetic.asset_factory" />
            <argument>%assetic.use_controller%</argument>
            <argument type="service" id="assetic.value_supplier" on-invalid="null" />
        </service>

        <service id="smarty.assetic.formula_loader" class="%assetic.cached_formula_loader.class%" public="false">
            <tag name="assetic.formula_loader" alias="smarty" />
            <tag name="assetic.templating.smarty" />
            <argument type="service" id="smarty.assetic.formula_loader.real" />
            <argument type="service" id="assetic.config_cache" />
            <argument>%kernel.debug%</argument>
        </service>

        <service id="smarty.assetic.formula_loader.real" class="%smarty.assetic.formula_loader.class%" public="false">
            <tag name="assetic.templating.smarty" />
            <argument type="service" id="templating.engine.smarty" />
        </service>
    </services>
</container>
